<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <a class="navbar-brand" href="/"><%= image_tag "d7logo.jpg" %></a>
    <h2 class="navbar-text">Decision 7 Documentation</h2>
    <button ng-click="newDoc()" class="navbar-right btn btn-info btn-md new-btn">New Doc</button>
  </div><!-- /.container-fluid -->
</nav>
<div class="content">
  <div class="row">
    <div class="container-fluid">
      <div id="wrapper">
        <section class="col-sm-3 col-md-2" id="sidebar-wrapper" ng-controller="ItemCtrl">
          <ul class="list-unstyled sidebar-nav">
            <li ng-repeat="items in item.docs | orderBy:'parent'">
              <h1 class="h4 col-md-2 text-center parent-item">{{items.parent}}</a></h1>
              <ul class="list-unstyled">
                <li ng-repeat="detail in items.details | orderBy:'title'">
                  <h1 class="h5 col-md-12 col-md-offset-2 text-left" style="margin-top: 0"><a href ng-click="view(detail.id)" >{{detail.title}}</a></h1>
                </li>
              </ul>
            </li>
          </ul>
        </section>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="container-fluid">
      <section class="col-md-10" id="doc-info">
        <aside class="flash row">
          <article flash-alert duration="0" active-class="alert" class="col-md-6 col-md-offset-3 col-sm-12">
            {{flash.message}}
          </article>
        </aside>
        <div class="col-md-5 back-button">
          <button ng-click="back()" class="btn btn-default">
            &larr; Back
          </button>
        </div>
        <article class="col-md-8 col-md-offset-2">
          <header id="info-head"><h2>{{doc.title}}</h2></header>
          <p id="info-text">
            <span ng-bind-html="renderHtml(doc.info)"></span>
          </p>
        </article>
        <div class="col-md-offset-3">
          <div class="col-md-6 text-center doc-buttons">
            <button ng-click="edit()" class="btn btn-md btn-info"> Edit </button>
            <button ng-click="delete()" class="btn btn-md btn-danger"> Delete </button>
          </div>
        </div>
        </section>
    </div>
  </div>
</div>